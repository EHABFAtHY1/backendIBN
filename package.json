{
    "name": "ibnalshaekh-backend",
    "version": "1.0.0",
    "description": "Backend API for Ibnalshaekh construction company website",
    "main": "dist/server.js",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "seed": "ts-node src/seed.ts",
        "docs": "node swagger.js",
        "test": "jest",
        "prod": "npm run build && npm run seed && npm run docs && npm run start",
        "vercel:deploy": "npm run build && npx vercel --prod",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:integration": "jest src/tests/integration",
        "test:unit": "jest src/tests/unit",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:stop": "docker-compose stop",
        "docker:restart": "docker-compose restart",
        "docker:logs": "docker-compose logs -f",
        "docker:build": "docker-compose build --no-cache"
    },
    "dependencies": {
        "@autp-swteam/swagger-autogen": "^1.0.0",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "express-validator": "^7.2.1",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.10.1",
        "multer": "^1.4.5-lts.1",
        "swagger-autogen": "^2.23.7",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.11",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/multer": "^1.4.12",
        "@types/node": "^22.13.1",
        "@types/supertest": "^2.0.12",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.7",
        "jest": "^29.7.0",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.7.3",
        "vercel": "^50.25.4"
    }
}
